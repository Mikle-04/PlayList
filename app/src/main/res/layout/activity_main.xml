<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.PlayList"
    android:background="?attr/colorOnBackground"
    android:orientation="vertical">


        <TextView
            android:id="@+id/txt_name_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/size_4dp"
            android:layout_marginVertical="@dimen/size_4dp"
            android:layout_marginEnd="52dp"
            android:paddingStart="@dimen/size_12dp"
            android:paddingTop="10dp"
            android:paddingEnd="62dp"
            android:paddingBottom="@dimen/size_12dp"
            android:text="@string/playlist_maker"
            android:textColor="@color/white"
            android:textSize="@dimen/size_text_main"
            tools:ignore="RtlSymmetry"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"/>




    <Button
        android:id="@+id/btn_search"
        android:layout_marginTop="24dp"
        android:text="@string/search"
        app:icon="@drawable/ic_search_24"
        style="@style/ButtonMainMenu" />

    <Button
        android:id="@+id/btn_media"
        android:layout_marginTop="@dimen/size_16dp"
        android:text="@string/mediateka"
        app:icon="@drawable/ic_media_24"
        style="@style/ButtonMainMenu" />

    <Button
        android:id="@+id/btn_setting"
        android:layout_marginTop="@dimen/size_16dp"
        android:layout_marginBottom="28dp"
        android:text="@string/setting"
        app:icon="@drawable/ic_settings_24"
        style="@style/ButtonMainMenu" />

</LinearLayout>