<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Base.Theme.PlayList"
    android:background="?attr/colorPrimaryVariant"
    tools:context=".ui.mediaActivity.MediaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMediaBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/size_12dp"
            android:src="@drawable/ic_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/ys_display_medium"
            android:paddingVertical="@dimen/size_12dp"
            android:paddingEnd="134dp"
            android:paddingBottom="@dimen/size_12dp"
            android:text="@string/mediateka_activity"
            android:textColor="?attr/colorOnSecondary"
            android:textFontWeight="500"
            android:textSize="@dimen/size_text_main" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutMedia"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tabTextColor ="?attr/colorOnSecondary"
        app:tabIndicatorColor="?attr/colorOnSecondary"
        app:tabIndicatorFullWidth="false"
/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerMedia"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>