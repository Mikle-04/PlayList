<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimaryVariant"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="@dimen/size_4dp"
        android:layout_marginTop="@dimen/size_4dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="@dimen/size_4dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="@dimen/size_12dp"
            android:src="@drawable/ic_back_24"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/size_12dp"
            android:text="@string/setting"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/size_text_main"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_setting_night"
            style="@style/SettingMenu"
            android:text="@string/txt_night_theme" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_theme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:alpha="0.6"
            android:paddingVertical="11dp"
            android:paddingStart="9dp"
            android:paddingEnd="@dimen/size_12dp"
            android:theme="@style/MySwitch"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/txt_share"
            style="@style/SettingMenu"
            android:text="@string/txt_share_app" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/size_12dp"
            android:src="@drawable/ic_share_24"
            tools:ignore="ContentDescription" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/txt_mode"
            style="@style/SettingMenu"
            android:text="@string/txt_mode" />

        <ImageView
            android:id="@+id/img_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/size_12dp"
            android:src="@drawable/ic_support_24"
            tools:ignore="ContentDescription" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/txt_agreement"
            style="@style/SettingMenu"
            android:text="@string/txt_user_agreement" />

        <ImageView
            android:id="@+id/img_agreement_next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/size_12dp"
            android:src="@drawable/ic_next_24"
            tools:ignore="ContentDescription" />


    </LinearLayout>
</LinearLayout>