<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonMainMenu" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/size_16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/fiol</item>
        <item name="android:textSize">@dimen/size_text_main</item>
        <item name="cornerRadius">@dimen/size_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size_8dp</item>
        <item name="iconTint">@color/fiol</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>
    <style name="TrackArtistAndTrackTime">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/size_11sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="imgEmpty">
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:layout_marginHorizontal">120dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="srcCompat">@drawable/not_result_track</item>
    </style>
    <style name="imgError">
        <item name="android:layout_marginTop">102dp</item>
        <item name="android:layout_marginHorizontal">120dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="srcCompat">@drawable/no_ithernet</item>
    </style>
    <style name="txtError">
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">@dimen/size_16dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:layout_marginHorizontal">24dp</item>

    </style>
    <style name="btvUpdate" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingHorizontal">@dimen/size_8dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="cornerRadius">54dp</item>
    </style>
    <style name="textPlay">
        <item name="android:layout_marginStart">@dimen/size_16dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="changeTextPlay">
        <item name="android:layout_marginEnd">@dimen/size_16dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/fiol</item>
    </style>

    <style name="btnNewPlayList" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingHorizontal">@dimen/size_8dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">visible</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/color</item>
        <item name="cornerRadius">54dp</item>
    </style>
</resources>